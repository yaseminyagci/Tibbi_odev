<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mathheals.tibbi_odev.profile">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            >

            <RelativeLayout
                android:layout_width="392dp"
                android:layout_height="177dp"
                android:background="#e5024893">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="131dp"
                    android:background="@drawable/profilem"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/profile_image"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginTop="15dp"
                    android:text="Merhaba "
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/profile_image" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/cv"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/book"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="42dp"
                android:clickable="true"
                android:src="@drawable/headache" />

            <ImageView
                android:id="@+id/chart"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignTop="@+id/book"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/book"
                android:clickable="true"
                android:src="@drawable/chart2" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Grafik Göster"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignStart="@+id/chart" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/book"
                android:layout_below="@+id/book"
                android:layout_marginTop="28dp"
                android:text="Baş Ağrısı Bilgisi "
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/input_exit"
                android:layout_width="88dp"
                android:layout_height="49dp"
                android:background="#f75e5e"
                android:text="çıkış"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
